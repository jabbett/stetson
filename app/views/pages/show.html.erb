<% if @page.parent.present? %>
<div class="stetson-parent">
  <div class="container">
    <%= link_to "#{@page.parent.title}".html_safe, @page.parent %>
  </div>
</div>
<% end %>
<div class="stetson-page-meta">
  <div class="container">
    <div class="meta">
      <h1><%= @page.title %></h1>
    </div>
    <div class="actions">
      <%= link_to icon('trash-2'), page_path(@page), method: :delete, data: { confirm: "Really delete page '#{@page.title}'?" } %>
      <%= link_to icon('file-plus'), new_page_path(parent_id: @page.id) %>
      <%= link_to icon('edit-2'), edit_page_path(@page) %>
    </div>
  </div>
</div>

<main class="container">
  <% if @child_pages.any? %>
  <nav class="stetson-children">
    <ul>
      <% @child_pages.each do |page| %>
      <li><%= link_to page.title, page %></li>
      <% end %>
      <!-- <li><em><%= link_to "Create a new page under #{@page.title}", new_page_path %></em></li> -->
    </ul>
  </nav>
  <% end %>
  <article class="stetson">
    <%= wiki_linkify(@markdown.render(@page.body)) %>

    <div class="provenance">
      <% if @page.updater %>
        Last updated <%= local_time_ago(@page.updated_at) %>
        by <%= @page.updater.email %><br />
      <% end %>
      Created <%= local_time_ago(@page.created_at) %>  
      <% if @page.creator %>by <%= @page.creator.email %><% end %>
    </div>
  </article>
  <aside class="comments">
    <div class="comment-list"><%= render @comments %></div>
    <%= render 'comments/form', comment: Comment.new(page: @page) %>
  </aside>
</main>